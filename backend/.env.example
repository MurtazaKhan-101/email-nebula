# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bulk_email_platform

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# AES Encryption Configuration (32 bytes / 64 hex chars)
AES_KEY=your_aes_key_32_bytes_64_hex_characters

# Email Campaign Configuration
EMAIL_BATCH_SIZE=5                    # Number of emails per batch (5 for Vercel, 10+ for non-serverless)
MAX_PROCESSING_TIME=45000             # Max processing time in ms (45s for Vercel, 300s+ for non-serverless)
EMAIL_DELAY_MS=1000                   # Delay between emails in ms (1s for Vercel, 2s+ for non-serverless)
MAX_RETRIES=2                         # Maximum retry attempts per email

# Application Configuration
PORT=3001
NODE_ENV=production

# Vercel Configuration (automatically set by Vercel)
VERCEL=1                              # Set by Vercel platform
VERCEL_URL=your-app.vercel.app        # Set by Vercel platform

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend.vercel.app
